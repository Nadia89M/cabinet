<div class="row">
  <div class="col-md-12">
    <%= simple_form_for @doc do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :title %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :content %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Content" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-danger btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
