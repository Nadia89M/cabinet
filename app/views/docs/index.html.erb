<div class='row'>
  <div class="col-md-12">
    <h1>Docs</h1>
    <br/>
    <% @docs.each do |doc| %>
    <div class="card">
      <div class="card-body">
        <p><%= link_to doc.title, doc_path(doc), class: 'card-title' %></p>
         <p><%= doc.created_at.to_date.strftime("%A, %b %d")   %></p>
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        
        <%= link_to 'Create New Doc', new_doc_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
